.container {position: relative; text-align: center;}
.flex {display: flex; flex-direction: column;}
.app-bg {position: relative;}
.app-img {position: absolute; top: 14%; left: 0; width: calc(100% - 5.3%);}
.more-btn {margin: 20px auto 40px;}
.popup {position: fixed; left: 0; bottom: -100%; width: 100%; transition: all 0.5s; z-index: 10;}
.popup.active {bottom: 0;}
.dim {display: none; position: fixed; left: 0; top: 0; z-index: 9; width: 100%; height: 100%; background: rgba(0, 0, 0, 0.5);}
.left-btn {position: absolute; left: 0; top: 0; z-index: 10; width: 50%; height: 100%; background: rgba(255, 0, 0, 0);}
.right-btn {position: absolute; right: 0; top: 0; z-index: 10; width: 50%; height: 100%; background: rgba(255, 0, 0, 0);}
.scroll {position: relative;}
.scroll > div + div {position: fixed; width: 100%; left: 50%; transform: translateX(-50%); bottom: 0;}
.rellax-scroll img {width: 100%;}
.rellax-scroll {position: absolute; left: 50%; top: 75%; width: 89.2%; transform: translate(-50%, -50%); transition: all 0.6s;}
.rellax-scroll > figure > a.hide {opacity: 0; transition: all 0.5;}
.rellax-scroll a + figure {margin-top: 20%;}
.card-stack {display: none; position: absolute; left: 50%; top: 0; transform: translateX(-50%); width: calc(100% + 10.8%);}
.card-stack ul li:last-child {margin-bottom: 100px;}
.card-stack + figure.hide {opacity: 0; transition: all 0.5;}

