@charset "utf-8";

/*login style*/
.login_wrap .login_head {height: 224px;background:#666 url('../../img/bond/bg_login_top.jpg') no-repeat center center;background-size: cover;border-top: 4px solid #014099;text-align: center;}
.login_wrap .login_head h1 {margin-top: 62px;padding: 0;border: 0;}

.login_wrap .login_cont .login_form {width: 440px; margin: 96px auto;}
.login_wrap input[type="text"],
.login_wrap input[type="password"] {border:none; border-radius:0; box-sizing:border-box; color:#333;font-family:'NanumGothicWEB',sans-serif,"돋움",Dotum,"굴림",Gulim; font-size:16px; height:55px; line-height: normal; overflow:hidden; padding:0 10px 0 29px; vertical-align:top; width:100%; word-break:break-all; border:1px solid #ccc;}
.login_wrap .login_form .login_id,
.login_wrap .login_form .login_password {padding: 0  10px 0 62px;}
.login_wrap .login_form .login_id {margin-bottom: 9px;background: url('../../img/bond/ipt_id.png') no-repeat 29px center;}
.login_wrap .login_form .login_password {background: url('../../img/bond/ipt_password.png') no-repeat 29px center;}
.ipt_ck {display: inline-block; position: relative;}
.ipt_ck input{ width:30px; height:30px; position:absolute; margin:1px 0 0 1px;opacity: 0}
.ipt_ck input + label {display:inline-block;min-height:30px;padding:4px 0 0 40px; color:#333; font-size: 14px;background:url("../../img/bond/ipt_check.png") no-repeat left top;line-height: 1.5em;}
.ipt_ck input:checked + label{background-position: 0 100%;}
.login_wrap .login_ck_wrap {height: 70px;}
.login_wrap .login_ck_wrap .ipt_ck {padding-top: 20px;}
.login_wrap .login_ck_wrap .ipt_ck label {font-size:16px;}
.login_btn button,.login_wrap .login_ck_wrap button {font-family:'NanumGothicWEB',sans-serif,"돋움",Dotum,"굴림",Gulim;border: none;cursor:pointer;}
.login_btn button,.login_btn a {display: inline-block;width: 100%;height: 60px;background-color: #4f94e9;border-radius:4px;font-size: 20px;line-height: 60px;color: #fff;font-weight: bold;text-align: center;}
.login_wrap .login_ck_wrap button{background: #707070;height:30px;width:100px;position:relative;color: #fff;margin-top: 20px;margin-left: 20px;border-radius: 4px;}
.guide-text{font-size: 14px;padding-left: 9px;text-indent: -9px;}

.login_wrap .login_foot {min-height: 80px;border-top: 1px solid #e3e3e3;padding-top: 26px;text-align: center;}
.login_wrap .login_foot .foot_logo {display: inline-block;width: 142px;height: 28px;vertical-align: middle;}
.login_wrap .login_foot .copy {display: inline-block;padding-left: 16px;vertical-align: middle;font-size: 12px;font-weight: bold;color: #999;}

.disabled { background:#f2f2f2 !important; color:#b2b2b2 !important; border:1px solid #c4c4c4 !important;}

/*간격*/
.mt10 {margin-top: 10px;}
.mt30 {margin-top: 30px;}
/*테이블*/
.bbs-table-view td.td_ipt input {background-color: #fff;width: 85%;}
.bbs-table-view th.bg-red {background: #feedec;}
.bbs-table-view th.bg-blue {background: #ebf0f6;}
.scroll-table {overflow:hidden; overflow:auto;}
.scroll-table .bbs-table {min-width:2200px;}

input.txt_right {text-align: right;padding-right: 10px;height: 38px;}

/*유의사항*/
.red_box {border:1px solid #f75248; background:#feedec; padding:15px; color:#000;}
.red_box .tl {font-size:14px; color:#000; padding-bottom:15px; line-height:18px; font-weight:bold;}
.red_box li {line-height:22px;}
.red_box li:last-child {padding-bottom:0;}
.black_box {border:1px solid #666; background:#fff; padding:15px; color:#000;}
.agree_box .box1 {border:1px solid #b3b3b3; padding:15px 15px 10px 15px;}

/*모바일인증팝업*/
.scroll_box {padding:40px 15px 30px 15px;margin-top: 5px;height: 570px;overflow:hidden;overflow-y:auto;-webkit-overflow-scrolling:touch;}
.scroll_box > .white_box { margin: 5px 0 0 5px;}
.white_box {background: #fff;border-radius: 8px;padding: 15px 20px;letter-spacing: -0.05em;box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);}
.white_box .list_1 li { margin-bottom: 0;}
.white_box .list_1 li { display: flex; padding-bottom: 5px; word-wrap: break-word; justify-content: space-between; flex-wrap: wrap;}
.white_box .list_1 li > span {font-size: 16px; color: #222426; text-align: right; font-weight: 700;}
.white_box .list_1 li > span.tit {font-size: 16px; color: rgb(112, 116, 120);}
.white_box .list_1 li > span em { color: #222426 !important; font-style: normal;}

.line {border-bottom:1px solid #ddd; margin-bottom:20px; padding-bottom:10px;}

input[type="checkbox"] {opacity: 0;}
.checkbox {margin-bottom: 16px;}
.checkbox:last-child {margin-bottom: 0rem;}
.chk{overflow:hidden; position:absolute; border:0; background:#fff; margin:0 0 0 0rem; width:24px; height:24px;}
.chk+.label{display:inline-block; position:relative; padding-left:3.2rem; font-size:15px; height:24px; line-height: 24px; font-weight: bold; border: none; color: #222426; cursor:pointer; box-sizing:border-box;}
.chk+.label:after{position:absolute; top:0; left:0; width:24px; height:24px; margin-top:0rem; transition: .3s; background:url('../../img/bond/ico_check_off.png') no-repeat center center #fff; border:1px solid #d3d3d3; border-radius: 50%; background-size: 12px auto; content: ''}
.chk:checked+.label{color:#222426;}
.chk:checked+.label:after{margin-top:0; background: url('../../img/bond/ico_check_on.png') no-repeat center center #1297ef; border:1px solid #1297ef; border-radius: 50%; background-size: 12px auto;}
.chk+.label.font22 {font-size: 16px; font-weight: bold;}
.checkbox + .line { border-top: 1px solid rgb(235, 236, 238); padding-bottom: 16px;  margin-top: 16px; border-bottom: 0px;}

.btn_box {width:100%; display: table; padding:0; text-align:center;}
.btn_box .btn {flex:1; width:1%; display: table-cell; text-align:center; margin:0 5px; padding-left:0; vertical-align: top; background: rgb(235, 236, 238); border-radius: 8px;}
.btn_box .btn_gray a, .btn_box .gray a { display: inline-block; width: 100%; color:rgb(34, 36, 38); border: none; font-size: 16px; padding:13px 10px; font-weight:bold;}
.btn_box.mt24 { margin-top: 24px;}

.text_data {margin-bottom: 40px; display: flex;}
.text_data .form {-webkit-flex:1; -moz-flex:1; flex:1; margin-right: 10px; position: relative;}
.text_data .btn_cont { margin-left: 12px; min-width: 100px; position: relative;}
.text_data .btn_cont button {padding: 14px 0; width: 120px; cursor:pointer; border-radius:4px; letter-spacing: -0.08rem; background:#ebecee; border:none; color:rgb(34, 36, 38); font-size:16px; line-height: 20px; font-weight: bold;}
.text_data.auth_t { margin-top: 9px;}
.text_data.auth_t .form { margin-right: 0;}
.text_data.auth_t .form input[type=text] { height: 48px; border-radius: 4px;}
.text_data .time {color: rgb(18, 151, 239); position: absolute; right: 10px; top: calc(50% - 8px); font-size: 14px; font-weight: bold;}

/* inpui타입 - 동의서보기 아이콘*/
.form_box, .checkbox, .agr_sub_check {position: relative;}
.agr_sub_check span.img {position:absolute; right: 1rem; top: .4rem;}
.form_box span.img a img, .checkbox span.img a img, .agr_sub_check span.img a img, h2 a.open_img img { width: 2.4rem; height: 2.4rem;}
h2 a.open_img {position:absolute; right: 0; top: .5rem;}
.form_box span.img a, .checkbox span.img a, h2 a.open_img {display: inline-block; width: 26px; height: 24px; font-size: 0; position:absolute; right: 0; top: 0;}
a.open_img {display: inline-block; width: 24px; height: 24px; text-indent: -5000px; position: absolute; right: 0;}
.form_box span.img a::before, .checkbox span.img a::before, h2 .open_img::before, .open_img::before {content: "보기"; text-indent: 0; position: absolute; right: 0px; top: 0px; letter-spacing: -0.05em; font-weight: 400; font-size: 14px; color: rgb(153, 153, 153); text-decoration: underline;}
h2 .open_img::before {top: -0.3rem;}
.form_box span.img a:focus, .checkbox span.img a:focus, h2 .open_img:focus, .open_img:focus {outline: 1px dotted #333;;}
.form_box span.img img, .checkbox span.img img, h2 a.open_img img, a.open_img img  {display: none;}