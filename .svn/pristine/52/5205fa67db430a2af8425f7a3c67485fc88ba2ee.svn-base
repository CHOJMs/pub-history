			field.focus();
			return false;
		}

		return true;
	}


	// 문자열 양쪽의 공백문자 제거
	function trim(str)
	{
		if(!str){
			return "";
		}
	   var start = 0;
	   var end = str.length-1;
	   var i;
	   for (i=0; i<str.length; i++) {
		if (str.charAt(i) != ' ') {
		 start = i;
		 break;
		}
	   }
	   for (i=str.length-1; i>=0; i--) {
		if (str.charAt(i) != ' ') {
		 end = i;
		 break;
		}
	   }
	   if( str.charAt(0) == ' ' && start == 0 && end == str.length-1)
		return "";
	   return str.substring(start,end+1);
	}



