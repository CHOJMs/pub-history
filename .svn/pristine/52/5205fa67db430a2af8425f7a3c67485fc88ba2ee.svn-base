	//업로드 파일 한글 체크
	function ChkHan(strValue)
	{
		for(i=0; i < strValue.length; i++)
		{
			var a = strValue.charCodeAt(i);

			if(a > 128)
			{
				return true;
			}
		}
	}

	/*
