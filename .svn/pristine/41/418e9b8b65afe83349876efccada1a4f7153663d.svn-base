/*alert*/

.popup-layer.alert {
    z-index: 10001;
}

.alertDim.active{
    position: fixed;
    left: 0;
    top: 0;
    width: 100vw;
    height: 100vh;
    background: rgba(0, 0, 0, 0.3);
    overflow: hidden;
    z-index: 10000;
    display: flex;
    justify-content: center;
    align-items: center;
}

.popup-layer .alert {
    width: 345px;
    min-height: 120px;
    border-radius: 8px;
    position: relative;
    background-color: #fff;
}

.alert-content {
    line-height: 24px;
    font-size: 16px;
    padding: 24px 26px;
    text-align: center;
    color: #222;
    font-weight: 500;
}

.alert .popup-btn {
    position: relative;
    bottom: 0;
    width: 100%;
    padding: 0;
    text-align: center;
    border-top: 1px solid #ddd;
}

.alert .btn-cancel {
    width: 50%;
    height: 57px;
    border-radius: 0 0 0 8px;
    background-color: #fff;
    font-weight: 700;
    font-size: 16px;
    color: #555;
    text-align: center;
    margin-right: 0px;
    border-right: 1px solid #ddd;
}

.alert .btn-confirm {
    border-radius: 0 0 8px 0;
    background-color: #fff;
    color: #2485f5;
    font-size: 16px;
    width: 100%;
}

.alert .btn-cancel + .btn-confirm {
    width: 49%;
}

