}

.popup-layer.viewer .popup .popup-content {
    height: 100%;
    margin-top: 130px;
    padding-top: 0;
    padding-bottom: 0;
    overflow: hidden;
    overflow-y: auto;
}

.popup-layer.viewer .popup .cont-viewer {
    width: calc(100% + 128px);
    margin-left: -64px;

}

.popup-layer.viewer .popup img {
    width: 100%;
}

.popup-layer.viewer .popup-content{
    position: relative;
}

.popup-layer.viewer .cont-pdf {
    position: absolute;
    margin-left: -34px;
    width: calc(100% - 60px);
