/* popup */
h2{
    font-weight: 700;
    font-size: 20px;
    color: #222;
    margin-top: 40px;
}
.popup-layer, .dim {
    visibility: hidden;
}
.dim {
    opacity: 0;
    visibility: hidden;
    position: fixed;
    left: 0;
    top: 0;
    width:
    100%;
    height:
    100%;
    background: rgba(0, 0, 0, 0.3);
    transition: all 0.3s;
    z-index: 9990;}
.popup-layer.active, .dim.active {
    opacity: 1;
    visibility:
    visible;}

.popup-layer {
    position: fixed;
    left: 50%;
    top: 50%;
    transform: translate(-50%, -50%);
    overflow: hidden;
    z-index: 9999;
    justify-content: center;
    align-items: center;
    border-radius: 16px;
    box-shadow: 0 -1px 15px rgb(0 0 0 / 20%);
}

.popup-layer .popup {
    opacity: 0;
    visibility: hidden;
    position: relative;
    max-height: 100vh;
    width: 860px;
    border-radius: 16px;
    background: #fff;
}

.popup-layer .popup.popup-01{
    width: 660px;
}

.popup-layer.active .popup{
    opacity: 1;
    visibility: visible;
    overflow: hidden;
}

.popup-head {
    position: absolute;
    top: 0;
    width: 100%;
    padding: 0 64px;
}

.popup-head h1 {
    padding-top: 64px;
    font-weight: 700;
    font-size: 32px;
    color: #222;
    letter-spacing: -1px;
}
.popup-close{
    position: absolute;
    right: 16px;
    top: 16px;
}
.popup-close a{
    display: block;
    width: 40px;
    height: 40px;
    background: #fff0 url(../../../img/dealer/2022/btn_close.svg) no-repeat center center;
}
